@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager

<ul class="navbar-nav">
    @*Si el usuario esta autenticado*@
    @if (SignInManager.IsSignedIn(User))
    {
        @*Si lo esta muestro su nombre*@
        <li class="nav-item">
            <span class="nav-link text-dark">HOLA, @User.Identity.Name</span>
        </li>
        //formulario para deslogearse
        <li class="nav-item">
            <form class="form-inline" asp-action="logout" asp-controller="usuarios"> 
                <button type="submit" class="nav-link btn btn-link text-dark" >Logout</button>

            </form>

        </li>
        
    }else
    {
        //sino, rededirijo al usuario a otro menu para registrarse
        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="usuarios" asp-action="Registro">
                Registro
            </a>
            <a class="nav-link dark-text" asp-controller="usuarios" asp-action="Login">
                Login
            </a>

        </li>
        
    }
</ul>